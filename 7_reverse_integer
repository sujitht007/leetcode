#include <limits.h>

int reverse(int x) {
    int rem = 0;
    int x1;

    while (x != 0) {
        x1 = x % 10;
        x = x / 10;

        
        if (rem > INT_MAX / 10 || (rem == INT_MAX / 10 && x1 > 7)) {
            return 0;
        }
        if (rem < INT_MIN / 10 || (rem == INT_MIN / 10 && x1 < -8)) {
            return 0;
        }

        rem = rem * 10 + x1;
    }

    return rem;
}
